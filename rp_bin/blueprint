my $jobarray="";



use Getopt::Long;
GetOptions( "blueprint=s"=> \$bp,
	    "job" => \my $job,
	    "serial" => \my $serial,
	    "week=i" => \$week,
	    "multi=s" => \$multi_str,
	    "inst=s" => \my $inst_str,
