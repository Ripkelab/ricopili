    $valid =0 if ($cells[$pcol] eq "NA"); 

    if ($short == 2) {
	$oline .= sprintf "\t";
    }
    else {
	if ($valid) {
	    $oline .= sprintf "\t%.3g",$cells[$pcol];
	}
	else {
	    $oline .= sprintf "\t-";
	}
    }
	    


    if ($short == 1) {
	$oline .= "\t-";
	$oline .= "\t-";
    }
    elsif ($short == 2) {
	$oline .= "\t ";
	if ($cells[$a2col] > 0){
	    if ($direc == 1) {
#		$oline .= sprintf "\t%.2f",$cells[$a1col];
		$oline .= sprintf "\t";
	    }
