	if ($ngtcol > -1) {
	    $oline .= sprintf "\t%s",$cells[$ngtcol];
	}
	else {
	    $oline .= sprintf "\t-";
	}
#	$oline .= sprintf "\t-";
    }

#    print "$short\n";
#    print "oline:$oline\n";
