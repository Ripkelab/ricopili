	my @cells = &split_line($header);
	$cov_str = "";
	foreach my $i (2..$#cells) {
	    print $cells[$i]."\n" if ($debug);
	    if ($cells[$i] =~ /[cC][0-9]+/ || $cells[$i] =~ /st[0-9]+/) {
                if ($cov_str eq "") {
		  $cov_str = "$cells[$i]" ;
                }
                else {
		  $cov_str .= " + $cells[$i]" ;
                }
	    }
	}

	
