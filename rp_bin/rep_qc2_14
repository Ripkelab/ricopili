	}
	elsif ($cells[4] == 0){
	    push @snpin_prekno_arr, $cells[0] ;
	}
	print INFO "$cells[0]\t$cells[1]\t$cells[2]\t$cells[3]\t$cells[4]\t$cells[5]\n";
    }
}
close PREK;
close EX;
