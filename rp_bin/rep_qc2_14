    }

    $pass="optimal" ;
    $pass = "$failedstr" if ($idex_fifi_fhet > 0);
    $pass = "$greenstr" if ($idex_fifi_fhet > 10);
    $pass = "$bluestr" if ($idex_fifi_fhet > 100);
    $pass = "$magentastr" if ($idex_fifi_fhet > 1000);
