    }


    if ($tdt) {
	$n_imend = &count_lines ("$fifiprefix.imendel") - 1;
	$n_pofi = &count_lines ("$pofiprefix.fam");
	$fam_excl = $n_pofi - $n_imend;
	if ($fam_excl != 0){
	    print "$fam_excl";
	    unless (-e "$ccprefix.fam") {
