	printf FI "SNPs: mendelian errors > %.3g & %d (%.1f\%) \\\\\n",$mend_th,$snpex_sefi_mend,100*$snpex_sefi_mend/$n_snps_fifi;
    }

    $n_prekno = @snpex_prekno_arr ;
    $n_prekno_autos = @snpex_prekno_arr_autos ;

