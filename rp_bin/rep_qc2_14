    printf GI "Males,Females,Unspec & %s,%s,%s & %s,%s,%s & %s,%s,%s\\\\\n"
	,$sex_num{1},$sex_num{2},$no_sex
	,$sex_num_pofi{1},$sex_num_pofi{2},$no_sex_pofi
