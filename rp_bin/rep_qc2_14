 plot (x=top[,x],y=-log10(top[,8]), main = paste (colnames(top)[x]," - TOP1000", sep =""), ylab = "-log10 (p)",  xlab=paste(length(top[,x])," top_snps", sep=""))


top<-topall

print (x)
print (top[1,x])
print (top[2,x])
print (colnames(top))
