###### p-cols
my @pcols ;
push @pcols, 5;
foreach (1..$nreps){
    push @pcols, 11+$_;
}
push @pcols, 13+(3*$nreps);
push @pcols, 14+(3*$nreps);
push @pcols, 17+(3*$nreps);
push @pcols, 18+(3*$nreps);




### grey cols (for mhc)
my @gcols ;
foreach (1..4){
    push @gcols, $_;
}
#foreach (6..8){
#    push @gcols, $_;
#}
#foreach (10..11){
#    push @gcols, $_;
#}
#push @gcols, 15+(3*$nreps);
