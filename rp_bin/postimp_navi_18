			if ($hg19_remove) {
			    $ident =~ s/.hg19.ch.fl/.ch.fl/;
			}


#			print "cat $dasudir_loc/dos_$ident.out.dosage.map >> dsc._$bfile.map\n";
## ident = scz_swe1_eur-qc.ch.fl.chr13_080_085

##     dos_scz_port_eur-qc.ch.fl.chr9_030_035.out.dosage.map
#		    print "ident: $danscoredir_loc/dan_$ident.profile.log\n";
			unless (-e "$danscoredir_loc/dan_$ident.profile.log"){
#			print "not yet her: $danscoredir_loc/dan_$ident.profile.log\n";
#			print "not yet her: $bfile\n";
