if ($metaset_file){
    die $!." <$rootdir/$metaset_file>" unless open IN, "< $rootdir/$metaset_file";
    while (my $line = <IN>){
	my @cells = &split_line($line);
	$cells[1] =~ s/.bim$//;
	$cells[1] .= ".ch.fl";
	$metaset{$cells[1]} = $cells[0];
	push @metaset_names, $cells[0];
    }
    close IN;
}


