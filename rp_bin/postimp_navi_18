    $p_gene_txt = "--pgene 0.00001";
}
if ($smallest_p > 1.0e-05) {
    $p_gene_txt = "--pgene 0.0001";
}
if ($smallest_p < 1.0e-30) {
    $p_gene_txt = "--pgene 0.00000005";
}


